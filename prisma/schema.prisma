generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Level {
  Internship
  Junior
  MidLevel
  Senior
  Lead
}

enum Contract {
  PartTime
  FullTime
  Contract
}

enum RoleName {
  Frontend
  Backend
  Fullstack
}

model Job {
  id         Int        @id @default(autoincrement())
  position   String
  isNew      Boolean    @default(false)
  isFeatured Boolean    @default(false)
  level      Level
  location   String
  contract   Contract
  postedAt   DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  languages  Language[]
  tools      Tool[]
  tags       Tag[]

  company   Company @relation(fields: [companyId], references: [id])
  companyId Int

  role   Role   @relation(fields: [roleId], references: [id])
  roleId String
}

model Company {
  id       Int    @id @default(autoincrement())
  name     String @unique
  logo     String
  location String
  jobs     Job[]
}

model Role {
  id   String   @id @default(cuid())
  name RoleName @unique
  jobs Job[]
}

model Language {
  id   String @id @default(cuid())
  name String @unique
  jobs Job[]
}

model Tool {
  id   String @id @default(cuid())
  name String @unique
  jobs Job[]
}

model Tag {
  id   String @id @default(cuid())
  name String @unique
  jobs Job[]
}
